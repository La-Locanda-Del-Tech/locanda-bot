{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@/*": ["."],
      "@handler/*": ["handler/*"],
      "@commands/*": ["handler/commands/*"],
      "@type/*": ["type/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src"]
}
